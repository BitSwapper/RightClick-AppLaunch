<!-- File: UI/ManageLayoutsWindow.xaml -->
<Window x:Class="RightClickAppLauncher.UI.ManageLayoutsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RightClickAppLauncher.UI"
        mc:Ignorable="d"
        Title="Manage Layouts" Height="450" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="300" MinWidth="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Saved Layouts" Grid.Row="0" Padding="5">
            <DataGrid x:Name="LayoutsDataGrid" 
                      AutoGenerateColumns="False" 
                      SelectionMode="Single"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Saved Date" Binding="{Binding SavedDate, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" Width="150" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Items Count" Binding="{Binding ItemCount}" Width="80" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Window Size" Binding="{Binding WindowSizeDisplay}" Width="100" IsReadOnly="True"/>
                </DataGrid.Columns>
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Rename" Click="RenameLayout_Click"/>
                        <MenuItem Header="Delete" Click="DeleteLayout_Click"/>
                        <Separator/>
                        <MenuItem Header="Load This Layout" Click="LoadLayout_Click"/>
                    </ContextMenu>
                </DataGrid.ContextMenu>
            </DataGrid>
        </GroupBox>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Rename" Width="75" Margin="5" Click="RenameButton_Click"/>
            <Button Content="Delete" Width="75" Margin="5" Click="DeleteButton_Click"/>
            <Button Content="Load" Width="75" Margin="5" Click="LoadButton_Click"/>
            <Button Content="Close" Width="75" Margin="5" IsCancel="True" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>