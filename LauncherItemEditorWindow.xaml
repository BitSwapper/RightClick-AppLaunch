<Window x:Class="RightClickAppLauncher.UI.LauncherItemEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RightClickAppLauncher.UI" 
        xmlns:converters="clr-namespace:RightClickAppLauncher.Converters"
        mc:Ignorable="d"
        Title="Edit Launcher Item" Height="420" Width="500"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False" ResizeMode="NoResize">
    <!-- Rest of your XAML from your error report is correct -->
    <Window.Resources>
        <converters:IconPathToImageSourceConverter x:Key="IconPathToImageSourceConverter"/>
    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Display Name:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="DisplayNameTextBox" Margin="5" VerticalAlignment="Center" Text="{Binding Item.DisplayName, UpdateSourceTrigger=PropertyChanged}"/>

        <Image Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" Source="{Binding ElementName=IconPathTextBox, Path=Text, Converter={StaticResource IconPathToImageSourceConverter}}" 
               Width="32" Height="32" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Executable Path:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="ExecutablePathTextBox" Margin="5" VerticalAlignment="Center" Text="{Binding Item.ExecutablePath, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Grid.Row="1" Grid.Column="2" Content="..." Margin="5" VerticalAlignment="Center" Click="BrowseExecutable_Click" Width="30" ToolTip="Browse for Executable"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Arguments:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" x:Name="ArgumentsTextBox" Margin="5" VerticalAlignment="Center" Text="{Binding Item.Arguments, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Icon Path:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="IconPathTextBox" Margin="5" VerticalAlignment="Center" Text="{Binding Item.IconPath, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Grid.Row="3" Grid.Column="2" Content="..." Margin="5" VerticalAlignment="Center" Click="BrowseIcon_Click" Width="30" ToolTip="Browse for Icon File"/>
        <TextBlock Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Text="Leave blank to use executable's icon. Supports .exe, .dll, .ico, .png, .jpg." FontStyle="Italic" Foreground="Gray" Margin="5,0,5,5" TextWrapping="Wrap"/>

        <Label Grid.Row="5" Grid.Column="0" Content="Working Directory:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="5" Grid.Column="1" x:Name="WorkingDirectoryTextBox" Margin="5" VerticalAlignment="Center" Text="{Binding Item.WorkingDirectory, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Grid.Row="5" Grid.Column="2" Content="..." Margin="5" VerticalAlignment="Center" Click="BrowseWorkingDirectory_Click" Width="30" ToolTip="Browse for Working Directory"/>
        <TextBlock Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" Text="Leave blank to use executable's directory." FontStyle="Italic" Foreground="Gray" Margin="5,0,5,5" TextWrapping="Wrap"/>

        <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="OK" Width="80" Margin="5" IsDefault="True" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="80" Margin="5" IsCancel="True" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>